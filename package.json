{
  "name": "saajith",
  "version": "1.0.0",
  "description": "\"# saajith\"",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "start": "cross-env NODE_ENV=production electron .",
    "dev:electron": "concurrently -k \"cross-env NODE_ENV=development vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/udaradhananjaya/saajith.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/udaradhananjaya/saajith/issues"
  },
  "homepage": "https://github.com/udaradhananjaya/saajith#readme",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "bootstrap": "^5.3.8",
    "sweetalert2": "^11.23.0",
    "tom-select": "^2.4.3"
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "vite": "^7.1.5",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.ud.saajith",
    "productName": "Expenses Tracking App - Created by UD",
    "icon": "build/icon.ico",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "models/**/*",
      "node_modules/better-sqlite3/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "models/app.db",
        "to": "app.db",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
